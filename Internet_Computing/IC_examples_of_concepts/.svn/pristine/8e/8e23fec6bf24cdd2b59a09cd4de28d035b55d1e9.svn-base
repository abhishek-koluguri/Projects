<html ng-app="myapp">
	<head>
		<script src="angular/angular.js"></script>
		<script src="controller.js"></script>
	</head>
	<body ng-controller="MyController as controller">
		Enter your name:
		<input type="text" ng-model="controller.name"></input>
		<p>
			<span>Hello {{ controller.nameInUpperCase(); }}</span>
		</p>
	</body>
</html>