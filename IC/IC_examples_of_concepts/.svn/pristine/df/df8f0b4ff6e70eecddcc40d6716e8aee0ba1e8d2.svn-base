<html>
	<head>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<script>
			var displayName = function(name) {
				$('#greet').html('Hello ' + name);
			}
		</script>
	</head>
	<body>
		Enter your name:
		<input type="text" onkeyup="displayName(this.value);"></input>
		<p>
			<span id="greet"></span>
		</p>
	</body>
</html>