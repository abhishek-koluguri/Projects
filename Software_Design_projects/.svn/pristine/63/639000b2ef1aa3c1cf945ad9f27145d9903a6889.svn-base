package application;

import java.util.stream.*;

public class FibonacciNumber {

    public int fibonacciValueAtAPosition(int input) {

        if (input < 0)
        {
            return 0;
        }
        else {

            if (input == 0 || input == 1) {

                return 1;
            } else {

                int result = Stream.iterate(new int[]{1, 1}, e -> new int[]{e[1], e[1] + e[0]})
                        .limit(input)
                        .map(e -> e[1])
                        .collect(Collectors.toList())
                        .get(input-1);

                return result;
            }
        }
    }
}

