package application;


import java.io.File;
import java.io.PrintWriter;
import java.util.function.Function;
import org.apache.commons.io.FileUtils;

public class FileWriter {

    private Function<String, String> stringConverter[];

    PrintWriter printWriter;

    FileWriter() {

        try {

            printWriter = new PrintWriter("C:\\Users\\Pramey\\IdeaProjects\\writerApp\\src\\application\\File.txt");

        } catch (Exception e)
        {
            e.printStackTrace();
        }
    }

    public void setPrintWriter(PrintWriter thePrintWriter)
    {
        printWriter = thePrintWriter;
    }

    public void write(String string) {

        if (stringConverter != null)
        {

            for(Function<String, String> theStringConverter: stringConverter) {

                string = theStringConverter.apply(string);
            }
        }

        printWriter.write(string);
        printWriter.close ();

    }

    public String getContent() {

        String content = null;

        try {

            content = FileUtils.readFileToString(new File("C:\\Users\\Pramey\\IdeaProjects\\writerApp\\src\\application\\File.txt"));

        }catch (Exception e)
        {
            e.printStackTrace();
        }

        return content;
    }

    public void setOperator(Function<String, String>... theStringConverter)
    {
        stringConverter = theStringConverter;
    }
}
